<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acitivity.AddChiTieuActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:layout_weight="1">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/edtHanMuc"
                android:textSize="18sp"
                android:hint="Hạn mức"
                android:paddingStart="5dp"
                android:textColor="@color/black"
                android:background="@drawable/bg_border_black"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Spinner
            android:id="@+id/spnCheDo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:background="@drawable/bg_border_black"
            android:layout_marginTop="20dp"/>
        <Spinner
            android:id="@+id/spnLoaiChiTieu"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Chọn loại chi tiêu"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:background="@drawable/bg_border_black"
            android:layout_marginTop="20dp"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tvChonNgay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Chon ngay"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:background="@drawable/bg_border_black"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/edtGhiChu"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Ghi chu"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:background="@drawable/bg_border_black"
            android:paddingLeft="5dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo thu chi"
        android:background="@drawable/bg_corners"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:id="@+id/btnAddThuChi"
        android:drawableEnd="@drawable/ic_forward"
        android:drawableTint="@color/white"
        android:drawablePadding="10dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>